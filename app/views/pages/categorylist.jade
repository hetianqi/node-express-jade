extend ../layout

block content
	.container
		.form-group
			a.btn-link(href="/admin/category/add") 添加分类
		table.table.table-hover.table-bordered
			thead
				tr
					th 分类名称
					th 录入时间
					th 更新
					th 删除
			tbody
				each item in categories
					tr(class="item-id-#{item.id}")
						td #{item.name}
						td #{moment(item.meta.createdAt).format('YYYY/MM/DD')}
						td
							a(href="/admin/category/update/#{item.id}") 修改
						td
							a.btn-link.del(href="javascript:", data-id="#{item.id}", data-type="category") 删除

	script(src="/js/list.js")