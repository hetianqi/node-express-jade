extend ../layout

block content
	.container
		.row
			form.form-horizontal(method="post", action="/admin/category/do")
				input(type="hidden", name="category[id]", value="#{category.id}")
				.form-group
					label.col-md-3.control-label(for="inputName") 分类名称
					.col-md-9
						input#inputName.form-control(type="text", name="category[name]", value="#{category.name}")
				.form-group
					.col-md-9.col-md-offset-3
						button.btn.btn-default(type="submit") 录入
