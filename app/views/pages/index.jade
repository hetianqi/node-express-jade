extend ../layout

block content
	.container
		.row
			each cat in categories
				.panel.panel-default
					.panel-heading
						h3
							a(href='/results?cat=#{cat._id}&p=1') #{cat.name}
					.panel-body
						if cat.movies && cat.movies.length > 0
							each item in cat.movies
								.col-md-2
									.ithumbnail(style="width: 100%")
										a(href="./movie/details/#{item.id}", target="_blank")
											img(src="#{item.poster}", alt="#{item.title}", width="100%")
										.caption
											h3 #{item.title}
											p: a.btn.btn-primary(href="./movie/details/#{item.id}", role="button", target="_blank") 观看预告片

	include ../includes/footer