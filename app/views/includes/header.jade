.container
	.page-header
		h1 imooc — #{title}
		.row
			.col-md-4
				small 重度科幻迷
			.col-md-8
				form.form-inline(method="GET", action="/results")
					.input-group.pull-right
						input.form-control(type="text", name="q")
						span.input-group-btn
							button.btn.btn-default(type="submit") 搜索
.navbar.navbar-default.navbar-fixed-top
	.container
		.navbar-header
			button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar-collapse")
				span.sr-only Toggle navigation
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand(href="/") 重度科幻迷
		.collapse.navbar-collapse#navbar-collapse
			if user && user.role == 1
				ul.nav.navbar-nav#menu
					if path == 'movielist'
						li.active
							a(href="javacript:") 电影管理
					else
						li
							a(href="/admin/movie/list") 电影管理
					if path == 'userlist'
						li.active
							a(href="javacript:") 用户管理
					else
						li
							a(href="/admin/user/list") 用户管理
					if path == 'categorylist'
						li.active
							a(href="javacript:") 分类管理
					else
						li
							a(href="/admin/category/list") 分类管理
			p.navbar-text.navbar-right
				if user
					span 欢迎您，#{user.name}
					span &nbsp;|&nbsp; 
					a.navbar-link(href="/user/logout") 登出
				else
					a.navbar-link(href="#signupModal", data-toggle="modal") 注册
					span &nbsp;|&nbsp; 
					a.navbar-link(href="#signinModal", data-toggle="modal") 登录

#signupModal.modal.fade
	.modal-dialog
		.modal-content
			.modal-header 
				h3.modal-title 注册
			.modal-body
				p.form-tip
				.form-group
					label(for="signupName") 用户名
					input#signupName.form-control(type="text")
				.form-group
					label(for="signupPassword") 密码
					input#signupPassword.form-control(type="password")
			.modal-footer
				button.btn.btn-default(type="button", data-dismiss="modal") 关闭
				button.btn.btn-primary.btn-signup(type="submit") 提交

#signinModal.modal.fade
	.modal-dialog
		.modal-content
			.modal-header 
				h3.modal-title 登录
			.modal-body
				p.form-tip
				.form-group
					label(for="signinName") 用户名
					input#signinName.form-control(type="text")
				.form-group
					label(for="signinPassword") 密码
					input#signinPassword.form-control(type="password")
			.modal-footer
				button.btn.btn-default(type="button", data-dismiss="modal") 关闭
				button.btn.btn-primary.btn-signin(type="submit") 提交

script(src="/js/user.js")
